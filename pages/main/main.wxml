<!--pages/main/main.wxml-->
<image src='../../image/bg.png' class='bg'></image>
<view class='search'>
  <image src='../../image/search.png' class='search-icon'></image>
  <view class='split-line'></view>
  <input 
    class='search-input'  
    value='{{searchstr}}' 
    bindconfirm="endsearchList" 
    bindblur='loseFocus'
    placeholder='有什么想问的'
  >
  </input>
</view>

<swiper class='swiper'>
  <swiper-item></swiper-item>
  <swiper-item></swiper-item>
  <swiper-item></swiper-item>
</swiper>

<view class='nav'>
  <view>
    <view></view>
    <text>常见问题</text>
  </view>
  <view>
    <view></view>
    <text>学习资料</text>
  </view>
  <view>
    <view></view>
    <text>校园生活</text>
  </view>
  <view>
    <view></view>
    <text>吃喝玩乐</text>
  </view>
</view>

<view class='question'>
  <view class='question-title'>
    <view class='question-title-line'></view>
    <text class='question-title-name'>热门问题</text>
  </view>
  <view class='question-list'>
    <item wx:for="{{questionTitleData}}" question="{{item.title}}" aid="{{item.aid}}" label="item.label" wx:key="{{index}}"></item>
  </view>
</view>

<view style='{{loading}}' class='loading'>
  <loading></loading>
</view>