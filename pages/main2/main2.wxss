/* pages/main/main.wxss */
.bg {
  width: 100%;
  height: 200rpx;
  position: fixed;
  z-index: -1;
}
.top{
  background-color: #6077FB;
  position: sticky;
  padding-top: 10rpx;
  top: 0rpx;
  padding: 0 50rpx;
  padding-bottom: 10rpx;
}
.swiper {
  margin: 0 50rpx;
  margin-top: 12rpx;
  height: 265rpx;
  border: solid 1px rgb(121, 121, 121);
  border-width: 1px;
  border-style: solid;
  border-color: rgb(121, 121, 121);
  border-radius: 15rpx;
  background-color: rgb(255, 255, 255);
  overflow: hidden;
}
.swiper image {
  width: 100%;
  height: 100%;
}
.questionlist {
  margin-top: 60rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
}
.list-item {
  display: flex;
  justify-content: space-around;
  margin-bottom: 30rpx;
}
.questionlist-icon {
  display: flex;
  align-items: center;
  flex-direction: column;
}
.questionlist-icon-image {
  width: 110rpx;
  height: 110rpx;
  border: solid 1rpx rgb(121, 121, 121);
  border-width: 1rpx;
  border-style: solid;
  border-color: rgb(121, 121, 121);
  border-radius: 15rpx;
  background-color: rgb(255, 255, 255);
  text-align: center;
}
.questionlist-icon-name {
  font-family: Arial Bold;
  font-size: 20rpx;
  font-weight: 700;
}
.questionlist-title {
  width: 495rpx;
  height: 55rpx;
  margin-top: 5rpx;
  border: solid 1rpx rgb(121, 121, 121);
  border-width: 1rpx;
  border-style: solid;
  border-color: rgb(121, 121, 121);
  border-radius: 15rpx;
  background-color: rgb(96, 119, 251);
  font-family: Arial Bold;
  font-size: 23rpx;
  font-weight: 700;
  line-height: 55rpx;
  text-align: center;
  color: rgb(255, 255, 255);
}