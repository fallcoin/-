.search {
  height: 72rpx;
  border-width: 1rpx;
  border-style: solid;
  border-color: rgb(121, 121, 121);
  border-radius: 15rpx;
  background-color: rgb(255, 255, 255);
  display: flex;
  align-items: center;
}
.search-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 36rpx;
  margin-right: 20rpx;
}
.split-line {
  width: 4rpx;
  height: 51rpx;
  line-height: 72rpx;
  background-color: gray;
}
.search-input {
  padding-left: 10rpx;
  width: 70%;
}