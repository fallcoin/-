/* component/list/list.wxss */
.question-list {
  border-radius: 15rpx 15rpx 0px 0px;
  overflow: hidden;
}
.item {
  margin-bottom: 10rpx;
}
.loading {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
}
.no-result {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  border: 1rpx solid #e2e2e2;
}